@model  List<BlogPageMvc.Models.Category.CategoriesWithBlogCounts>

<div class="card mb-4">
    <div class="card-header font-weight-bold">Kategoriler</div>
    <div class="row">
        <div class="col-sm-12">
            <ul class="list-group">
                @foreach (var item in @Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center @(ViewBag.ActiveCategory?.ToString()==item.CategoryName.ToString()?"active":"")">
                        <a asp-controller="blog"  asp-route-category="@item.CategoryName">@item.CategoryName</a>
                        <span class="badge badge-primary badge-pill">@item.BlogCount</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>