@model List<BlogPageMvc.Models.Tag.TagVM>

<div class="card mb-4">
    <div class="card-header font-weight-bold">Tag</div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <ul class="list-unstyled mb-0">
                    @for (int i = 0; i < Model.Count / 2+1; i++)
                    {
                        <li><a href="#!">@Model[i].TagName</a></li>
                    }
                </ul>
            </div>
            <div class="col-sm-6">
                <ul class="list-unstyled mb-0">
                    @for (int i = Model.Count/2+1; i < Model.Count ; i++)
                    {
                        <li><a href="#!">@Model[i].TagName</a></li>
                    }
                    
                </ul>
            </div>
        </div>
    </div>
</div>