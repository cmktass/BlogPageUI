@model BlogPageMvc.Models.Controller.ControllerVM

@{
    ViewData["Title"] = "AddController";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <h1>Kontroller Ekle</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddController">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ControllerName" class="control-label"></label>
                    <input asp-for="ControllerName" class="form-control" />
                    <span asp-validation-for="ControllerName" class="text-danger"></span>
                    <span class="text-danger">@Html.ValidationSummary()</span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


